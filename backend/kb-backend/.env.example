# DashScope 配置（与 ai-sdk-rag-starter 保持一致）
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 服务端口
PORT=3001

# 允许的跨域来源（逗号分隔）
ALLOW_ORIGINS=http://localhost:5173,http://localhost:5555

# Chroma 向量数据库配置
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_MODE=server
CHROMA_COLLECTION_NAME=kb_documents

# 向量存储模式: json | persistent | server
VECTOR_STORE_MODE=server

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=KBase
MYSQL_PASSWORD=123456
MYSQL_DATABASE=kb_database

# RabbitMQ 配置（可选）
# RABBIT_URL=amqp://localhost:5672
# QUEUE_NAME=kb_ingest

# 上传配置
MAX_UPLOAD_FILES=20
MAX_FILE_SIZE=26214400
