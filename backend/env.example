# ==================== 公共配置 ====================
# 所有后端服务共享的配置

# DashScope API Key (用于文本嵌入和 LLM)
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ==================== Chroma 向量数据库配置 ====================
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=kb_documents

# ==================== MySQL 数据库配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=KBase
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=kb_database

# ==================== kb-backend 专用配置 ====================
KB_PORT=3001
KB_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3001,http://localhost:5555,http://localhost:5556

# ==================== qa-chatbot-backend 专用配置 ====================
QA_PORT=3002
QA_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3002
